{
  "compilerOptions": {
    "outDir": "../dist/cli",
    "rootDir": ".",
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Node",
    "paths": {
      "@cli/*": ["./src/*"]
    }
  },
  "include": ["index.ts", "src"],
  "exclude": ["node_modules", "dist"]
}